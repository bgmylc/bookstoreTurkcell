@model bookStoreTurkcell.Models.Author

@{
    ViewData["Title"] = "Delete";
}

<h1>Sil</h1>

<h3>Yazarı silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Yazar</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.ID" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Dön</a>
    </form>
</div>

<h1></h1>

@if (ViewBag.Message == 0)
{
<div class="alert alert-danger" role="alert">
    <strong>Oh Hayır!</strong> Kitapları olan bir yazarı silemezsiniz :( <a asp-action="Index" class="alert-link"> Hadi Listeye dön artık</a>.
</div>

}

