@model IEnumerable<bookStoreTurkcell.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Yazarlar</h1>

<p>
    <a asp-action="Create">Yeni Yazar Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>    
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bio)
            </th>     
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { authorID = item.ID }) |
                @Html.ActionLink("Detaylar", "Details", new { authorID = item.ID }) |
                @Html.ActionLink("Sil", "Delete", new { authorID = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
