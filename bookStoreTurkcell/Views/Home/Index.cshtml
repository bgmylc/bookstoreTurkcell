@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}

<div class="row">
    @foreach (var book in Model)
    {
        @if (count != 0 && count % 4 == 0)
        {
            @:</div>
            @:<div class="row">
        }
        <div class="col-3">
            <partial name="_BookCard" model="@book" />
        </div>
        count++;
    }
</div>
          
<ul class="pagination">
    
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
      {
        <li class="page-item"><a class="page-link" asp-action="Index" asp-controller="Home" asp-route-page="@i" asp-route-genreID="@ViewBag.GenreID" asp-route-authorID="@ViewBag.AuthorID" asp-route-pubID="@ViewBag.PubID">@i</a></li>
      }

</ul>
              