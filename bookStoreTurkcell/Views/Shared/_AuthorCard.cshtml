@model Author
@{  
    var request = ViewContext.HttpContext.Request;
    string returnURLValue = request.QueryString.HasValue ?
    $"{request.Path}{request.QueryString}" : request.Path.ToString();

}
    <div class="card h-100 text-white bg-secondary mb-3">
        <img src="@Model.ImageUrl" class="card-img-top img-thumbnail " alt="Yazar">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <h6 class="card-text">@Model.Bio</h6>
            <form method="post">
                <input type="hidden" name="returnURL" value="@returnURLValue" />
                <button type="submit" class="btn btn-light">Detaylar</button>
            </form>

        </div>
    </div>