<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BegumBooks </title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img img src="https://lh3.googleusercontent.com/eRPGOfo-dToceuOoVpwhWsSlGuot04AbCwz4hOPsslvPGrr5GXD_Q0TQo_x32o72FFwMXe5kTxAT-6qM5o83loPHt_WqLrSdYVWS5Hp8Eb0II8cPJ_cowgdDO1TXVgYKl5-Pui4izQ=w2400" alt="" width="100" height="100" class="d-inline-block align-top">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <div class="container">
                            <div class="row">
                                <div class="col-5">
                                    <li class="nav-item">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            @if (User.IsInRole("Admin"))
                                            {

                                                <div class="dropdown">
                                                    <button class="btn btn-warning dropdown-toggle" type="button" data-toggle="dropdown">
                                                        Hoşgeldin @User.Identity.Name, neler yapacaksın?
                                                        <span class="caret"></span>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Çıkış Yap</a></li>
                                                        <div class="dropdown-divider"></div>
                                                        <li><a class="dropdown-item" asp-controller="Books" asp-action="Index">Kitap İşlemleri</a></li>
                                                        <li><a class="dropdown-item" asp-controller="Authors" asp-action="Index">Yazar İşlemleri</a></li>
                                                        <li><a class="dropdown-item" asp-controller="Publishers" asp-action="Index">Yayınevi İşlemleri</a></li>
                                                        <li><a class="dropdown-item" asp-controller="Genres" asp-action="Index">Tür İşlemleri</a></li>
                                                    </ul>
                                                </div>
                                            }
                                            else if (User.IsInRole("Standard User"))
                                            {
                                                <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Logout">
                                                    Merhaba @User.Identity.Name :) <strong> (Çıkış Yap)</strong>
                                                </a>

                                            }

                                        }

                                        else
                                        {
                                            <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Login">
                                                Giriş Yap
                                            </a>
                                        }
                                    </li>
                                </div>
                                <div class="col">
                                    <li class="nav-item">
                                        <a class="btn btn-light" asp-area="" asp-controller="Home" asp-action="Author">
                                            Yazarlar
                                        </a>
                                    </li>
                                </div>
                                <div class="col">
                                    <li class="nav-item">
                                        <a class="btn btn-light" asp-area="" asp-controller="Home" asp-action="Publisher">
                                            Yayınevleri
                                        </a>
                                    </li>
                                </div>
                                <div class="col">
                                    <li class="nav-item ">
                                        <a class="btn btn-info" asp-area="" asp-controller="Cart" asp-action="Index">
                                            Sepetim
                                        </a>
                                    </li>
                                </div>
                                    </div>           
                            </div>
                        </div>
                    </ul>
                  
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col-3">@await Component.InvokeAsync("Menu")</div>
                <div class="col-9"> @RenderBody()</div>
            </div>
           
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - bookStoreTurkcell - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
